<% @page_title = "DrinkRobot.com - Password Reset" %>

<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "styledform" }) do |f| %>
  <%= f.error_messages %>

  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.submit "Reset my Password", :class => 'super button green' %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
