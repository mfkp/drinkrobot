<% @page_title = "DrinkRobot.com - Login"%>
<div>
	<div>
	<div class="toolbar"> 
		<h1>Sign In</h1> 
		<a href="/" class="backHome">Back</a> 
		<%= link_to "Register", new_registration_path(resource_name), :class => 'button' %>
	</div> 

	<ul class="edgetoedge">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "styledform" }) do |f| %>
	  <li><%= f.label :email %></li>
	  <li><%= f.text_field :email %></li>

	  <li><%= f.label :password %></li>
	  <li><%= f.password_field :password %></li>

	  <% if devise_mapping.rememberable? %>
		<li><%= f.check_box :remember_me %> <%= f.label :remember_me %></li>
	  <% end %>
	  
	  <li><%= f.submit "Login", :class => 'super green' %></li>
	<% end %>
	</ul>

	<%= render :partial => "devise/shared/links" %>
	</div>
</div>
