    			<ul>
    				<li><a href="/">Search</a></li>
    				<li><a href="/recipes">Browse</a></li>
    				<li><a href="/index/about">About</a></li>
<% if user_signed_in? %>  
					<li><%= link_to "Sign out", destroy_user_session_path %></li>
<% else %>  
					<li><%= link_to "Register/Login", new_user_session_path %></li>
<% end %>
    			</ul>				
    		</nav>
    	
    	</div>
    
    </header>

    <div id="contentcontainer">
    	<% if flash[:notice] %>
    	<span id="notice">
			<%= flash[:notice] %>
		</span>
		<% end %>
		
		<% if flash[:error] %>
    	<span id="notice">
			<%= flash[:error] %>
		</span>
		<% end %>
		
		<% if flash[:alert] %>
		<span id="notice">
			<%= flash[:alert] %>
		</span>
		<% end %>

		<%= yield  %>
    </div>
