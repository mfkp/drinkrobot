	<script type="text/javascript"> 
    $(document).ready(function() {
        $("#tokenize").tokenInput("/ingredients/search/", {
            hintText: "Type in the names of the drinks you have",
            noResultsText: "No results",
            searchingText: "Searching..."
        });
    });
    </script> 
    
